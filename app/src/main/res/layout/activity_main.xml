<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rock Paper Scissors"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your weapon and challenge the computer!"
            android:textSize="16sp"
            android:textColor="#B3B3B3"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Score Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Player Score -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You"
                    android:textSize="14sp"
                    android:textColor="#B3B3B3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/playerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/score_badge"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

            <!-- VS Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#B3B3B3"
                android:layout_marginHorizontal="16dp" />

            <!-- Computer Score -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer"
                    android:textSize="14sp"
                    android:textColor="#B3B3B3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/computerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/score_badge"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Game Area -->
        <LinearLayout
            android:id="@+id/gameArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <!-- Player Choice -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Choice"
                    android:textSize="12sp"
                    android:textColor="#B3B3B3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/playerChoiceEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â“"
                    android:textSize="48sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/playerChoiceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- VS Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš”ï¸"
                android:textSize="32sp"
                android:layout_marginHorizontal="16dp" />

            <!-- Computer Choice -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Choice"
                    android:textSize="12sp"
                    android:textColor="#B3B3B3"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/computerChoiceEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â“"
                    android:textSize="48sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/computerChoiceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Result Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/resultDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#B3B3B3"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Choice Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/rockButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="ðŸª¨\nRock"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/choice_button_selector"
                android:gravity="center" />

            <Button
                android:id="@+id/paperButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="ðŸ“„\nPaper"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/choice_button_selector"
                android:gravity="center" />

            <Button
                android:id="@+id/scissorsButton"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="âœ‚ï¸\nScissor"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/choice_button_selector"
                android:gravity="center" />



        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/playAgainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Again"
                android:textColor="#FFFFFF"
                android:background="@drawable/primary_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/resetGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Game"
                android:textColor="#FFFFFF"
                android:background="@drawable/secondary_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Instructions -->
        <TextView
            android:id="@+id/instructionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸª¨ Rock beats Scissors â€¢ ðŸ“„ Paper beats Rock â€¢ âœ‚ Scissors beats Paper\n\nTap on your choice to start playing!"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made By: Messam Raza"
            android:textColor="@color/secondary_text"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>

</ScrollView>